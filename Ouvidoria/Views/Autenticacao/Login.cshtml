@model Ouvidoria.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}


@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensagem"]
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 content-cad">
                <div class="form-group col-md-12">
                    <img src="https://faculdadeam.edu.br/Content/images/amf.png" style="max-width: 30%; margin-left: 35%; margin-top: 25px;" />
                    <h2>Login</h2>
                    <hr />
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.UrlRetorno)
                </div>

                <div class="text-center">@Html.ValidationMessageFor(model => model.Email)</div>
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Usuário" })
                </div>

                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label" })
                    @Html.PasswordFor(model => model.Senha, new { @class = "form-control", placeholder = "Senha" })
                    @Html.ValidationMessageFor(model => model.Senha)
                </div>

                <div class="form-group col-md-12  text-right">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>

}


@section  scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}