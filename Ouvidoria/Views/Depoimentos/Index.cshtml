<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 text-center">
            <h1>
                <i class="fa fa-comment-dots type-gyphi"></i>
            </h1>
        </div>
        <div class="col-xs-12 text-center">
            <h1 class="name-giphy">Depoimentos</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <ul class="list-group">
                @foreach (var item in ViewBag.registros)
                {
                    string estilo = "white";
                    if (@ViewBag.registros.IndexOf(item) % 2 == 0)
                    {
                        estilo = "#eaeaea";
                    }
                    <li class="list-group-item" style="background: @estilo">
                        <h4 class="list-group-item-heading"><b>Tipo:       </b>@item.TipoDepoimento.Tipo</h4>
                        @if (item.Resposta == null)
                        {
                            <div class="badge badge-primary badge-pill">
                                <a href="/Depoimentos/Responder/@item.id"><i class="glyphicon glyphicon-envelope" style="font-size: 20px; color: white;" rel="tooltip" title="Responder"></i></a>
                            </div>
                        }
                        <h4 class="list-group-item-heading"><b>Usuário:    </b>@item.Usuario.Nome</h4>
                        <p class="list-group-item-text">    <b>Descrição:  </b>@item.Descricao</p>
                        @if (item.Resposta != null)
                        {
                            <p class="list-group-item-text"><b>Resposta: </b>@item.Resposta</p>
                        }
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <script type="text/javascript">
        alert('@TempData["Error"]');
    </script>
}