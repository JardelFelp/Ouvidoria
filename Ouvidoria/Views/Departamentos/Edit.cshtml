@model Ouvidoria.Models.Departamento

<div class="container-fluid">
    <div class="content-sides">
        <div class="col-md-8 col-md-offset-2" id="divInicial">
            <div class="form-horizontal">
                <h1>
                    <i class="glyphicon glyphicon-pencil type-gyphi" style="padding: 12px; height: 60px; width: 60px; font-size: 35px;  "></i>
                    Departamentos - @Html.Label(Model.Nome)
                </h1>
                <hr />
                <ol class="breadcrumb">
                    <li>
                        @Html.ActionLink("Departamentos", "Index", "Departamentos")
                    </li>
                    <li class="active" id="liPagina">Editar</li>
                </ol>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Nome, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Nome)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-9 text-right">
                            @Html.ActionLink("Voltar", "Index", null, new { @class = "action-link btn btn-default" })
                            <input type="submit" value="Salvar" class="btn btn-primary" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>