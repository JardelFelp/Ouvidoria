@model Ouvidoria.Models.Departamento

<div class="container-fluid content-end">

    @{Html.RenderPartial("_PartialAdmSideBar"); }

    <div class="col-md-9 col-sm-8 content-cad" id="divInicial">
        <h2>Departamentos</h2>
        <hr />
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Departamentos", "Index", "Departamentos")
            </li>
            <li class="active" id="liPagina">Excluir</li>
        </ol>
        <h3>Você tem certeza que deseja excluir o seguinte Departamento?</h3>
        <br />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="text-align: right">
                    @Html.ActionLink("Voltar", "Index", null, new { @class = "action-link btn btn-default" })
                    <input type="submit" value="Excluir" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>
