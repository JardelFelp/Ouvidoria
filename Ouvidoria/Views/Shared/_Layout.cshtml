<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ouvidoria</title>

    <link href="@Url.Content("/css/app.css")" rel="stylesheet">
    <link href="@Url.Content("/css/bootstrap.css")" rel="stylesheet">
    <link href="@Url.Content("/css/modern-business.css")" rel="stylesheet">
    <link href="@Url.Content("/css/all.css")" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="https://faculdadeam.edu.br/">
                    <img src="/img/logoBranca.png" style="width: 50px;position: absolute;left: 30px;top: 5px;" />
                </a>
                @Html.ActionLink("Ouvidoria", "Index", new { controller = "Home" }, new { @class = "navbar-brand", id = "navBrand" })
            </div>

            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav navbar-right">

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("2"))
                        {
                            <li id="">
                                @Html.ActionLink("Feedbacks", "Index", "Feedbacks")
                            </li>
                            <li id="">
                                @Html.ActionLink("Depoimentos", "Index", "Eventos")
                            </li>
                            <li id="">
                                @Html.ActionLink("Administração", "Index", "Administracao")
                            </li>
                        }
                        if (User.IsInRole("1"))
                        {
                            <li id="">
                                @Html.ActionLink("Registre sua opinião", "Index", "Ouvidoria")
                            </li>
                        }
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                @User.Identity.Name <span class="caret" style="color: white;"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Alterar senha", "AlterarSenha", "PainelUsuario")</li>
                                <li>@Html.ActionLink("Sair", "Logout", "Autenticacao")</li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li id="sidebarpage">
                            @Html.ActionLink("Login", "Login", "Autenticacao")
                        </li>
                        <li id="sidebarpage">
                            @Html.ActionLink("Registrar-se", "Cadastrar", "Autenticacao")
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()


    <footer class="page-footer font-small" style="margin: 0; padding: 15px 0; background-color: #363535">

        <!-- Copyright -->
        <div class="footer-copyright text-center py-3">
            <h2>Ouvidoria AMF</h2>
            <p style="color: white">Aqui você interage da melhor maneira com a instituição.</p>
        </div>
        <!-- Copyright -->

    </footer>

    <script src="@Url.Content("/Scripts/jquery-3.3.1.js")"></script>
    <script src="@Url.Content("/js/main.js")"></script>
    <script src="@Url.Content("/js/bootstrap.min.js")"></script>
    @RenderSection("scripts", false)
</body>
</html>