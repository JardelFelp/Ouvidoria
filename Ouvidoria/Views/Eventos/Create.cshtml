@model Ouvidoria.Models.Evento

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="col-xs-12">
            <h4>Novo Evento</h4>
            <hr />
        </div>
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Titulo, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Titulo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @Html.TextAreaFor(model=> model.Descricao, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Descricao)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idEventoTipo, "Tipo de Evento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @Html.DropDownList("idEventoTipo", (IEnumerable<SelectListItem>)ViewBag.PriorityID, new { @class = "form-control btn btn-default" })
                @Html.ValidationMessageFor(model => model.idEventoTipo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idUsuario, "Usuário", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @Html.DropDownList("idUsuario", (IEnumerable<SelectListItem>)ViewBag.PriorityID, new { @class = "form-control btn btn-default" })
                @Html.ValidationMessageFor(model => model.idUsuario)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-10" style="text-align: right">
                <button class="btn btn-default">@Html.ActionLink("Voltar", "Index")</button>
                <input type="submit" value="Salvar Evento" class="btn btn-primary" />
            </div>
        </div>
    </div>
}