
@{
    ViewBag.Title = "Index";
}

<section>
    <div class="container-fluid" style="background-color: white; padding-bottom: 100px; padding-top: 50px;">
        <div class="row">
            <div class="col-xs-12 text-center welcome">
                <h1 class="title">
                    <i class="fa fa-cogs"></i>
                    Administração
                </h1>
                <h3>Gerencie seu sistema</h3>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container-fluid" style="background-image: linear-gradient(#04519b, #044687 60%, #033769)">
        <div class="row icons">
            <div class="col-md-2 col-xs-12 col-sm-6 col-md-offset-1 col-xs-offset-0 col-sm-offset-3">
                <a class="col-xs-12 item btn-active" href="@Url.Action("Index", "Cursos")">
                    <h1><i class="glyphicon glyphicon-asterisk"></i></h1>
                    <h3>Cursos </h3>
                    <p>Cadastre, edite ou visualize todos os cursos da Faculdade. </p>
                </a>
            </div>
            <div class="col-md-2 col-xs-12 col-sm-6 col-md-offset-2 col-xs-offset-0 col-sm-offset-3">
                <a class="col-xs-12 item btn-active" href="@Url.Action("Index", "Departamentos")">
                    <h1><i class="glyphicon glyphicon-briefcase"></i></h1>
                    <h3>Departamentos </h3>
                    <p>Cadastre, edite e visualize os departamentos para que os usuários possam deixar o seu Feedback. </p>
                </a>
            </div>
            <div class="col-md-2 col-xs-12 col-sm-6 col-md-offset-2 col-xs-offset-0 col-sm-offset-3">
                <a class="col-xs-12 item btn-active" href="@Url.Action("Index", "Usuarios")">
                    <h1><i class="glyphicon glyphicon-user"></i></h1>
                    <h3>Usuários </h3>
                    <p>Altere ou visualize os dados de um usuário cadastrado no sistema. </p>
                </a>
            </div>
        </div>
    </div>
</section>

