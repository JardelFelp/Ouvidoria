@model IEnumerable<Ouvidoria.Models.Retorno>

@{
    ViewBag.Title = "Respostas";
}

<h2>Respostas</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Questionario.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataRetorno)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Questionario.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataRetorno)
        </td>
        <td>
            @Html.ActionLink("Ver respostas", "Resposta", new { id=item.id }) 
        </td>
    </tr>
}

</table>
