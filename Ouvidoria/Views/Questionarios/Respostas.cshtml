@model IEnumerable<Ouvidoria.Models.Retorno>

@{
    ViewBag.Title = "Respostas";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 text-center">
            <h1>
                <i class="glyphicon glyphicon-comment type-gyphi"></i>
            </h1>
        </div>
        <div class="col-xs-12 text-center">
            <h1 class="name-giphy">Respostas Questionário</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <ul class="list-group">
                @foreach (var item in Model)
                {
                    <li class="list-group-item" style="background: #eaeaea">
                        <h4 class="list-group-item-heading">
                            <b>Título: </b>@Html.DisplayFor(modelItem => item.Usuario.Nome)
                            @Html.ActionLink("Ver respostas", "Resposta", new { id = item.id }, new { @class = "btn btn-primary btn-sm pull-right" })
                        </h4>
                        <p>@Html.DisplayFor(modelItem => item.Questionario.Titulo)</p>
                        <small>@Html.DisplayFor(modelItem => item.DataRetorno)</small>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
