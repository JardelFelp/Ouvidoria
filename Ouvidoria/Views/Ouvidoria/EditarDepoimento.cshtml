@model Ouvidoria.Models.Depoimento


<div class="container-fluid content-end">
    <div class="row" >
        <div class="col-md-10 col-md-offset-1 content-cad" id="divFormulario">
            <h1 class="page-header">
                Ouvidoria
                <small id="smTipo">Editar Depoimento</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Ouvidoria", "Index", "Ouvidoria")
                </li>
                <li class="active" id="liPagina">Editar Depoimento</li>
            </ol>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.id)

                    <div class="form-group">
                        <label for="Titulo" class="control-label col-md-2">Título</label>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Descricao" class="control-label col-md-2">Descrição</label>
                        <div class="col-md-9">
                            @Html.TextAreaFor(model => model.Descricao, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Descricao)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="idTipoDepoimento" class="control-label col-md-2">Selecione o tipo do Depoimento</label>
                        <div class="col-md-9">
                            @Html.DropDownList("idTipoDepoimento", (IEnumerable<SelectListItem>)ViewBag.PriorityID, new { @class = "form-control btn btn-default" })
                            @Html.ValidationMessageFor(model => model.idTipoDepoimento, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-9" style="text-align: right">
                            <input type="submit" value="Salvar Alteração" class="btn btn-primary" id="btnSalvar" />
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>

