@model Ouvidoria.Models.Evento
@{
    ViewBag.Title = "Ouvidoria";
}

<div class="container-fluid content-end">
    <div class="row" style="padding-left: 25px; padding-right: 25px; width: calc(100% - 50px)">
        <div class="col-md-3 col-sm-4 sidebar">
            <ul class="nav nav-stacked nav-pills" style="background-color: white;">
                <li>
                    @Html.ActionLink("Página Inicial", "Index", "Home")
                </li>
                <li>
                    @Html.ActionLink("Registre seu Feedback", "Feedback", "Ouvidoria")
                </li>
                <li>
                    @Html.ActionLink("Feedbacks Registrados", "MeusFeedbacks", "Ouvidoria")
                </li>
                <li>
                    <ol class="breadcrumb" style="margin-bottom: 0px !important;"><li>Selecione abaixo o tipo do depoimento</li></ol>
                </li>
                <li>
                    <a href="#" id="mostraDenuncia">-     Denúncias</a>
                </li>
                <li>
                    <a href="#" id="mostraElogio">-     Elogios</a>
                </li>
                <li>
                    <a href="#" id="mostraReclamacao">-     Reclamações</a>
                </li>
                <li>
                    <a href="#" id="mostraSugestao">-     Sugestões</a>
                </li>
                <li>
                    @Html.ActionLink("Depoimentos Registrados", "MeusDepoimentos", "Ouvidoria")
                </li>
            </ul>
        </div>


        <div class="col-md-9 col-sm-8 content-cad" id="divFormulario">
            <h1 class="page-header">
                Ouvidoria
                <small id="smTipo">Registre abaixo a sua Denúncia</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Ouvidoria", "Index", "Ouvidoria")
                </li>
                <li class="active" id="liPagina">Denúncia</li>
            </ol>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label for="Titulo" class="control-label col-md-2">Título</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Titulo, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Titulo)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Descricao" class="control-label col-md-2">Descrição</label>
                        <div class="col-md-9">
                            @Html.TextAreaFor(model => model.Descricao, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Descricao)
                        </div>
                    </div>

                    <div class="form-group" hidden="hidden">
                        @Html.DropDownList("idEventoTipo", (IEnumerable<SelectListItem>)ViewBag.PriorityID, new { @class = "form-control btn btn-default" })
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10 text-right">
                            <button class="btn btn-default">@Html.ActionLink("Voltar", "Index")</button>
                            <input type="submit" value="Salvar Denúncia" class="btn btn-primary" id="btnSalvar" />
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
    <!-- /.row -->
</div>

<script src="@Url.Content("/Scripts/jquery-3.3.1.js")"></script>

<script>
    $(document).ready(function () {

        $("#mostraReclamacao").click(function () {
            $("#smTipo").text("Registre abaixo a sua Reclamação");
            $(".active").text("Reclamação");
            $("#idEventoTipo").prop('selectedIndex', 2);
            $("#btnSalvar").val("Salvar Reclamação");
        });

        $("#mostraSugestao").click(function () {
            $("#smTipo").text("Registre abaixo a sua Sugestão");
            $(".active").text("Sugestão");
            $("#idEventoTipo").prop('selectedIndex', 3);
            $("#btnSalvar").val("Salvar Sugestão");
        });

        $("#mostraElogio").click(function () {
            $("#smTipo").text("Registre abaixo o seu Elogio");
            $(".active").text("Elogio");
            $("#idEventoTipo").prop('selectedIndex', 1);
            $("#btnSalvar").val("Salvar Elogio");
        });

        $("#mostraDenuncia").click(function () {
            $("#smTipo").text("Registre abaixo a sua Denúncia");
            $(".active").text("Denúncia");
            $("#idEventoTipo").prop('selectedIndex', 0);
            $("#btnSalvar").val("Salvar Denúncia");
        });
    });
</script>