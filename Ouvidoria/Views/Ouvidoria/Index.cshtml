@model Ouvidoria.Models.Evento
@{
    ViewBag.Title = "Ouvidoria";
}
<div class="container">
    <div class="row">
        <div class="col-md-3 col-sm-4 sidebar">
            <ul class="nav nav-stacked nav-pills">
                <li>
                    @Html.ActionLink("Página Inicial", "Index", "Home")
                </li>
                <li>
                    <a href="#" id="mostraOuvidoria">Ouvidoria</a>
                </li>
                <li>
                    <a href="#" id="mostraReclamacao">Reclamações</a>
                </li>
                <li>
                    <a href="#" id="mostraSugestao">Sugestões</a>
                </li>
                <li>
                    <a href="#" id="mostraElogio">Elogios</a>
                </li>
                <li>
                    <a href="#" id="mostraDenuncia">Denúncias</a>
                </li>
            </ul>
        </div>




        <div class="col-md-9 col-sm-8" id="divInicial">
            <h1 class="page-header">
                Ouvidoria
                <small>Escolha ao lado a opção desejada</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Ouvidoria", "Index", "Ouvidoria")
                </li>
                <li class="active" id="liPagina">Inicio</li>
            </ol>
            <div>
                <p>Escolha ao lado a opção desejada.</p>
            </div>
        </div>

        <div class="col-md-9 col-sm-8" id="divFormulario" hidden="hidden">
            <h1 class="page-header">
                Ouvidoria
                <small id="smTipo">Registre abaixo a sua reclamação</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Ouvidoria", "Index", "Ouvidoria")
                </li>
                <li class="active" id="liPagina">Reclamações</li>
            </ol>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Titulo, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Titulo)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-9">
                            @Html.TextAreaFor(model => model.Descricao, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Descricao)
                        </div>
                    </div>

                    <div class="form-group" hidden="hidden">
                        @Html.LabelFor(model => model.idEventoTipo, "Tipo de Evento", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-9">
                            @Html.DropDownList("idEventoTipo", (IEnumerable<SelectListItem>)ViewBag.PriorityID, new { @class = "form-control btn btn-default" })
                            @Html.ValidationMessageFor(model => model.idEventoTipo)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.idUsuario, "Usuário", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-9">
                            @Html.DropDownList("idUsuario", (IEnumerable<SelectListItem>)ViewBag.PriorityID, new { @class = "form-control btn btn-default" })
                            @Html.ValidationMessageFor(model => model.idUsuario)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10" style="text-align: right">
                            <button class="btn btn-default">@Html.ActionLink("Voltar", "Index")</button>
                            <input type="submit" value="Salvar Evento" class="btn btn-primary" id="btnSalvar"/>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- /.row -->
</div>

<script src="@Url.Content("/Scripts/jquery-3.3.1.js")"></script>
<script src="@Url.Content("/Scripts/jquery-3.3.1.intellisense.js")"></script>
<script src="@Url.Content("/Scripts/jquery-3.3.1.min.js")"></script>
<script src="@Url.Content("/Scripts/jquery-3.3.1.min.map")"></script>
<script src="@Url.Content("/Scripts/jquery-3.3.1.slim.js")"></script>
<script src="@Url.Content("/Scripts/jquery-3.3.1.slim.min.js")"></script>
<script src="@Url.Content("/Scripts/jquery-3.3.1.slim.min.map")"></script>

<script>
    $(document).ready(function () {
        $("#mostraOuvidoria").click(function () {
            $("#divInicial").show();
            $("#divFormulario").hide();
        });

        $("#mostraReclamacao").click(function () {
            $("#divInicial").hide();
            $("#divFormulario").show();
            $("#smTipo").text("Registre abaixo a sua Reclamação");
            $("#liPágina").text("Reclamação");
            $("#idEventoTipo").prop('selectedIndex', 2);
            $("#btnSalvar").val("Salvar Reclamação");
        });

        $("#mostraSugestao").click(function () {
            $("#divInicial").hide();
            $("#divFormulario").show();
            $("#smTipo").text("Registre abaixo a sua Sugestão");
            $("#liPágina").text("Sugestão");
            $("#idEventoTipo").prop('selectedIndex', 3);
            $("#btnSalvar").val("Salvar Sugestão");
        });

        $("#mostraElogio").click(function () {
            $("#divInicial").hide();
            $("#divFormulario").show();
            $("#smTipo").text("Registre abaixo o seu Elogio");
            $("#liPágina").text("Elogio");
            $("#idEventoTipo").prop('selectedIndex', 1);
            $("#btnSalvar").val("Salvar Elogio");
        });

        $("#mostraDenuncia").click(function () {
            $("#divInicial").hide();
            $("#divFormulario").show();
            $("#smTipo").text("Registre abaixo a sua Denúncia");
            $("#liPágina").text("Denúncia");
            $("#idEventoTipo").prop('selectedIndex', 0);
            $("#btnSalvar").val("Salvar Denúncia");
        });
    });
</script>