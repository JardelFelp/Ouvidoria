@model Ouvidoria.Models.Curso

@{
    ViewBag.Title = "Create";
}

<div class="container-fluid content-end">

    @{Html.RenderPartial("_PartialAdmSideBar"); }
    <div class="col-md-9 col-sm-8 content-cad" id="divInicial">
        <h2>Departamentos</h2>
        <hr />
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Departamentos", "Index", "Departamentos")
            </li>
            <li class="active" id="liPagina">Novo</li>
        </ol>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Curso</h4>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nome)
                        @Html.ValidationMessageFor(model => model.Nome)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>





